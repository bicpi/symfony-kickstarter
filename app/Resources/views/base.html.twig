<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% spaceless %}{% if block('title') %}{{ block('title') }} | {% endif %}Symfony Kickstarter{% endspaceless %}</title>
        {% stylesheets
            '//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css'
            '//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/cupertino/jquery-ui.css'
            '@DemoBundle/Resources/public/css/styles.scss'
            filter='cssrewrite,?uglifycss' output='generated/all.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/demo/img/favicon.ico') }}" />

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        {% javascripts
            '//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'
            '//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'
            output='generated/ie8.js' filter='?uglifyjs2' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">Symfony Kickstarter</a>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="{% if 'homepage' == app.request.get('_route') %}active{% endif %}">
                            <a href="{{ path('homepage') }}">{{ 'nav.home'|trans() }}</a>
                        </li>
                        <li class="{% if 'registration' == app.request.get('_route') %}active{% endif %}">
                            <a href="{{ path('registration') }}">{{ 'nav.registration'|trans() }}</a>
                        </li>
                        {% if app.user and is_granted('ROLE_USER') %}
                            <li class="{% if 'user' == app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('user') }}">{{ 'nav.user'|trans() }}</a>
                            </li>
                        {% endif %}
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="{% if 'admin' == app.request.get('_route') %}active{% endif %}">
                                <a href="{{ path('admin') }}">{{ 'nav.admin'|trans() }}</a>
                            </li>
                        {% endif %}
                    </ul>

                    {% block account %}
                        {% if app.user and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-user"></span>&nbsp;
                                        {{ app.user.fullName }} <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                                        <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('fos_user_security_logout') }}">
                                                <span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;Log Out
                                            </a>
                                        </li>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <li class="divider"></li>
                                            <li>
                                                <a href="{{ path('homepage', {_switch_user: 'user'}) }}">
                                                    <span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Impersonate 'user' account
                                                </a>
                                            </li>
                                        {% elseif is_granted('ROLE_PREVIOUS_ADMIN') %}
                                            <li class="divider"></li>
                                            <li>
                                                <a href="{{ path('homepage', {_switch_user: '_exit'}) }}">
                                                    <span class="glyphicon glyphicon-log-out"></span>&nbsp;&nbsp;Exit impersonation
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </li>
                            </ul>
                        {% else %}
                            {% render(controller('DemoBundle:Default:quickLogin')) %}
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </nav>

        <div class="container">
            {% for type, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div class="alert alert-{{ type|replace({'fos_user_': ''}) }}">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        {{ message|trans({}, contains(type, 'fos_user_') ? 'FOSUserBundle' : null) }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}
                <h1>Content goes here.</h1>
                <p>...</p>
            {% endblock %}
        </div>

        {% javascripts
            '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'
            '//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js'
            '//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js'
            '@FOSJsRoutingBundle/Resources/public/js/router.js'
            'bower/holderjs/holder.js'
            '@DemoBundle/Resources/public/js/main.js'
            output='generated/all.js' filter='?uglifyjs2' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
